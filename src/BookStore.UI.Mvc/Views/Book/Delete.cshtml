@model BookStore.Domain.Models.BookViewModel
@{ Layout = null; }
<div class="alert alert-danger" style="margin: 15px 0 15px 5%; width: 90%;">
    <strong>Essa operação é irreversível</strong> deseja realmente remover o seguinte registro?
</div>
<div class="row">
    <div class="pd-clear col-lg-12">
        <form id="ajaxSubmit" enctype="multipart/form-data" class="form-horizontal" asp-controller="livros" asp-action="remover">
            <div class="form-group-separated">
                <div class="form-group">
                    <label class="col-md-3 col-xs-12 control-label">Código do livro</label>
                    <div class="col-md-6 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-asterisk"></span></span>
                            <input type="number" name="Code" value="@Model.Code" class="form-control" disabled readonly>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-12 control-label">Nome do livro</label>
                    <div class="col-md-6 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                            <input type="text" name="Name" value="@Model.Name" class="form-control" disabled readonly>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-12 control-label">ISBN</label>
                    <div class="col-md-6 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-book"></span></span>
                            <input type="text" name="ISBN" value="@Model.ISBN" class="form-control" disabled readonly>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-12 control-label">Prefácio</label>
                    <div class="col-md-6 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                            <textarea name="Preface" cols="40" value="@Model.Preface" class="form-control" rows="5" disabled readonly>@Model.Preface</textarea>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-12 control-label">Número de páginas</label>
                    <div class="col-md-6 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-book"></span></span>
                            <input type="number" name="TotalPagesNumbers" value="@Model.TotalPagesNumbers" class="form-control" disabled readonly>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-12 control-label">Número de capítulos</label>
                    <div class="col-md-6 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-book"></span></span>
                            <input type="number" name="TotalChaptersNumbers" value="@Model.TotalChaptersNumbers" class="form-control" disabled readonly>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-12 control-label">Ano de lançamento</label>
                    <div class="col-md-6 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-book"></span></span>
                            <input type="number" name="ReleaseYear" value="@Model.ReleaseYear" class="form-control" disabled readonly>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-12 control-label">Autor</label>
                    <div class="col-md-6 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-user"></span></span>
                            <input type="text" name="AuthorName" value="@Model.AuthorName" class="form-control" id="author-autocomplete" disabled readonly>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-12 control-label">Categoria</label>
                    <div class="col-md-6 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-th"></span></span>
                            <input type="text" name="CategoryName" value="@Model.CategoryName" class="form-control" id="category-autocomplete" disabled readonly>
                        </div>
                    </div>
                </div>

            </div>
            <input type="hidden" value="@Model.Id" name="Id" />
            <input type="hidden" value="@Model.IsActive.ToString()" name="IsActive" />
            <input type="hidden" value="@Model.AuthorId.ToString()" name="AuthorId" id="AuthorId" />
            <input type="hidden" value="@Model.CategoryId.ToString()" name="CategoryId" id="CategoryId" />
        </form>
    </div>
</div>