@model BookStore.Domain.Models.AuthorViewModel
@{ Layout = null; }
<div class="row">
    <div class="pd-clear col-lg-12">
        <form id="ajaxSubmit" enctype="multipart/form-data" class="form-horizontal" asp-controller="autores" asp-action="inserir">
            <div class="form-group-separated">
                <div class="form-group">
                    <label class="col-md-3 col-xs-12 control-label">Email do autor</label>
                    <div class="col-md-6 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-envelope"></span></span>
                            <input type="email" name="Email" value="@Model.Email" class="form-control">
                        </div>
                        <span class="help-block">O email deverá conter um '&#64;' e no máximo 150 dígitos</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-12 control-label">Nome do autor</label>
                    <div class="col-md-6 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                            <input type="text" name="Name" value="@Model.Name" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-xs-12 control-label">Código do autor</label>
                    <div class="col-md-6 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-asterisk"></span></span>
                            <input type="text" name="Code" value="@Model.Code" class="form-control">
                        </div>
                    </div>
                </div>
            </div>
            <input type="hidden" value="@Model.Id" name="Id" />
            <input type="hidden" value="@Model.IsActive.ToString()" name="IsActive" />
        </form>

    </div>
</div>